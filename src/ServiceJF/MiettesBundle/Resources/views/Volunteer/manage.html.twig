{% extends 'ServiceJFMiettesBundle::layout.html.twig' %}

{% block body_content %}
    <div class="container my-3">
        <div class="row">
            <div class="col-12 col-md-6 mb-2 mb-md-0">
                <h2 class="text-primary border border-primary border-left-0 border-right-0 border-top-0">Volontaires
                    déclarés</h2>
                <ul class="list-unstyled">
                    {% for volunteer in volunteers %}
                        <li>{{ volunteer.user.surname }} {{ volunteer.user.name }}</li>
                    {% else %}
                        <li>Pas encore de volontaire inscrit.</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-12 col-md-6">
                <div class="mb-2" id="addVolunteer">
                    <h2 class="text-primary border border-primary border-left-0 border-right-0 border-top-0">Ajouter un
                        volontaire</h2>
                    {{ form_start(addForm) }}
                    {{ form_row(addForm.user) }}
                    <div class="text-right">{{ form_row(addForm.submit, {'attr': {'class': 'btn btn-sm btn-outline-secondary text-primary'}}) }}</div>
                    {{ form_rest(addForm) }}
                    {{ form_end(addForm) }}
                </div>
                {% if volunteers|length > 0 %}
                    <div id="removeVolunteer">
                        <h2 class="text-primary border border-primary border-left-0 border-right-0 border-top-0">Retirer
                            un volontaire</h2>
                        {{ form_start(removeForm) }}
                        {{ form_row(removeForm.id) }}
                        <div class="text-right">{{ form_row(removeForm.submit, {'attr': {'class': 'btn btn-sm btn-outline-secondary text-primary'}}) }}</div>
                        {{ form_rest(removeForm) }}
                        {{ form_end(removeForm) }}</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}