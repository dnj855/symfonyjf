{% extends 'ServiceJFMiettesBundle::layout.html.twig' %}

{% block body_content %}
    <div class="container my-3">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3">
                <div class="card border-primary">
                    <div class="card-body py-3">
                        <h3 class="card-title text-center mb-3">
                            {{ cleaner.user.surname }} {{ cleaner.user.name }}
                        </h3>
                        <div class="d-flex justify-content-around">
                            <a class="btn btn-outline-success text-dark btn-sm" href="{{ path('servicejf_miettes_cleanup', { volunteer : cleaner.id }) }}"><i class="far fa-thumbs-up"></i> Valider</a>
                            <a class="btn btn-outline-danger text-dark btn-sm"
                               href="{{ path('servicejf_miettes_random', { attempt : attempt +1 }) }}"><i
                                        class="far fa-thumbs-down"></i> Refuser</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}