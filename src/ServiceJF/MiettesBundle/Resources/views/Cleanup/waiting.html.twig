{% extends 'ServiceJFMiettesBundle::layout.html.twig' %}

{% block body_content %}
    <div class="container my-3">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3">
                <div class="card border-primary">
                    <div class="card-header pb-0 text-primary">
                        <h3 class="card-title">Tirage au sort en cours</h3>
                    </div>
                    <div class="card-body">
                        <div class="progress">
                            <div class="progress-bar progress-bar-animated progress-bar-striped" id="bar" style="width: 0"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function redirect() {
            window.location="{{ path('servicejf_miettes_random', { attempt : 0 }) }}";
        }
        setTimeout(redirect, 5000);
    </script>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    var i = 0;
    var progressBar = $("#bar");
    function countNumbers(){
        if(i < 100){
            i = i + 1;
            progressBar.css("width", i + "%");
        }
        // Wait for sometime before running this script again
        setTimeout("countNumbers()", 40);
    }
    countNumbers();
</script>
{% endblock %}