{% extends 'ServiceJFChallengeCSSBundle::layout.html.twig' %}

{% block body_subtitle %}
    {% if game.home %}
        FC Metz - {{ game.opponent.name }}
    {% else %}
        {{ game.opponent.name }} - FC Metz
    {% endif %}
{% endblock %}

{% block seasonChoose %}
{% endblock %}

{% block body_content %}
    <div class="col-12 col-md-6 offset-md-3">
        <div class="d-flex justify-content-between my-0 py-0">
            <h3 class="ci-user">J{{ game.gameNumber }}</h3>
            <h3 class="ci-user">{{ game.date|localizeddate('short', 'none') }}</h3>
        </div>
        <hr class="border-primary my-0 py-1">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col-6">
                {% if game.home %}
                    {{ form_row(form.scoreFCMetz) }}
                {% else %}
                    {{ form_row(form.scoreOpponent, { 'label' : 'Score - ' ~ game.opponent.name ~ ' :'}) }}
                {% endif %}
            </div>
            <div class="col-6">
                {% if game.home %}
                    {{ form_row(form.scoreOpponent, { 'label' : 'Score - ' ~ game.opponent.name ~ ' :'}) }}
                {% else %}
                    {{ form_row(form.scoreFCMetz) }}
                {% endif %}
            </div>
        </div>
        <div class="form-row">
            <div class="col-12">
                {{ form_row(form.director) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-12" align="right">
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}