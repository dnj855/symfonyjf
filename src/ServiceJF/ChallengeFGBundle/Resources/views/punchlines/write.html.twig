{% extends 'ServiceJFChallengeFGBundle::layout.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.structure.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.theme.min.css') }}">
{% endblock %}

{% block body_content %}
    <div class="container">
        <div class="row pt-4">
            <div class="col-12 col-md-8 offset-md-4">
                {{ form_start(form) }}
                {{ form_row(form.punchline, { 'attr' : {'rows' : 4}}) }}
                {{ form_row(form.postDate, { 'attr' : { 'class' : 'datepicker form-control' }}) }}
                <div class="d-flex flex-row-reverse">
                    {{ form_row(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/external/jquery/jquery.js') }}"></script>
    <script src="{{ asset('assets/js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('assets/js/datepicker-fr.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                dateFormat: 'dd/m/yy',
                firstDay: 1
            });
            $.datepicker($.datepicker.regional["fr"]);
        });
    </script>
{% endblock %}