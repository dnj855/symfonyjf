{% extends 'ServiceJFChallengeCM18Bundle::layout.html.twig' %}

{% block body_subtitle %}
    tous les matchs
{% endblock %}

{% block body_content %}
    <div class="row d-md-flex justify-content-md-center">
        <div class="col-12 col-md-6 order-md-2">
            <h3 class="ci-user border-primary border border-left-0 border-right-0 border-top-0 mb-2 mb-md-4">
                Matchs à jouer
            </h3>
            {% for game in toBePlayedGames %}
                <div{% if loop.last == false %} class="mb-2"{% endif %}>
                    {% if game.gamePhase.eliminatory != 1 %}
                        {{ include('ServiceJFChallengeCM18Bundle:Game:poolGame.html.twig') }}
                    {% else %}
                        {{ include('ServiceJFChallengeCM18Bundle:Game:knockoutGame.html.twig') }}
                    {% endif %}
                </div>
            {% else %}
                Aucun match au programme !
            {% endfor %}
        </div>
        <div class="col-12 col-md-6 order-md-1 mt-md-0 mt-3">
            <h3 class="ci-user border-primary border border-left-0 border-right-0 border-top-0 mb-2 mb-md-4">
                Matchs déjà joués
            </h3>
            {% for game in playedGames %}
                <div{% if loop.last == false %} class="mb-2"{% endif %}>
                    {% if game.gamePhase.eliminatory != 1 %}
                        {{ include('ServiceJFChallengeCM18Bundle:Game:poolGame.html.twig') }}
                    {% else %}
                        {{ include('ServiceJFChallengeCM18Bundle:Game:knockoutGame.html.twig') }}
                    {% endif %}
                </div>
            {% else %}
                La compétition n'a pas encore commencé !
            {% endfor %}
        </div>

    </div>
{% endblock %}