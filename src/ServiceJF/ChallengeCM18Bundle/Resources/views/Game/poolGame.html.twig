<div class="card border-primary">
    <div class="card-header text-primary my-0 py-1">
        <div class="d-flex justify-content-between align-items-baseline">
            <span>{{ game.date|localizeddate('short', 'short') }}</span>
            {% if gamesDashboard is defined %}
                <span class="small">
                        {{ game.pool.displayName }}
                </span>
            {% endif %}
            <span>{{ game.gamePhase.name }}</span>
        </div>
    </div>
    <div class="card-body py-2 px-2">
        <div class="row mb-2">
            <div class="col-5 align-items-center pt-1" align="right">
                <span class="flag-icon flag-icon-{{ game.teamHome.flag }}"></span>&nbsp;{{ game.teamHome.name }}
            </div>
            {% if game.scoreHome is not null %}
                <div class="col-1 align-items-center pt-1" align="center">
                    <strong>{{ game.scoreHome }}</strong>
                </div>
                <div class="col-1 align-items-center pt-1" align="center">
                    <strong>{{ game.scoreAway }}</strong>
                </div>
            {% else %}
                <div class="col-2 align-items-center pt-1" align="center">
                    -
                </div>
            {% endif %}
            <div class="col-5 align-items-center pt-1">
                {{ game.teamAway.name }}&nbsp;<span class="flag-icon flag-icon-{{ game.teamAway.flag }}"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                {% if now < game.date %}
                    {% if gamesDashboard is defined %}
                        <a class="btn btn-primary btn-sm text-light"
                           href="{{ path('servicejf_cm18_poolDashboard', { 'pool' : game.pool.id }) }}">
                            Pronostiquer
                        </a>
                    {% endif %}
                {% else %}
                    {% if bet is defined %}
                        <small>
                            <em>
                                {% if bet.betHome is not null %}
                                    Pour rappel, ton prono : {{ bet.betHome }} - {{ bet.betAway }}.
                                {% else %}
                                    Tu n'as pas enregistr√© de prono pour cette partie.
                                {% endif %}
                            </em>
                        </small>
                    {% endif %}
                    <div class="small ml-2"><a href="#" data-toggle="modal" data-target="#bets{{ game.id }}">Voir tous les pronos
                            de ce match</a></div>
                    <div class="modal fade" id="bets{{ game.id }}" tabindex="-1" role="dialog" aria-labelledby="bets{{ game.id }}Label" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="bets{{ game.id }}Label">{{ game.teamHome.name }} - {{ game.teamAway.name }}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <ul class="list-group list-group-flush">
                                    {% for savedBet in game.bets %}
                                        <li class="list-group-item"><strong class="text-primary">{{ savedBet.player.identity.surname }} {{ savedBet.player.identity.name }} :</strong> {{ savedBet.betHome }} - {{ savedBet.betAway }}</li>
                                    {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
</div>