<div class="form-inline">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form.date, { 'attr' : { 'class' : 'datepicker form-control form-control-sm mr-2' }}) }}
    {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-sm btn-primary text-light'}}) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>