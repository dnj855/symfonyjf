{% extends 'ServiceJFAdminBundle::layout.html.twig' %}

{% block body_subtitle %}
    modifier {{ user.surname }} {{ user.name }}
{% endblock %}

{% block body_content %}
    <div class="container">
        <div class="row pt-4">
            <div class="col-sm-12 col-md-6 offset-md-6">
                {{ form_start(form) }}
                {{ form_row(form.plainPassword, { 'label' : 'label.passwordEdit'}) }}
                <div class="d-flex flex-row-reverse">
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}